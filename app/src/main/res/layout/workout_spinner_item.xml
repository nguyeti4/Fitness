<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    >

    <ImageView
        android:id="@+id/spinnerCheckMark_iv"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        app:layout_constraintEnd_toStartOf="@id/spinnerTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_weight=".5"
        android:src="@drawable/ic_baseline_check_24"
        android:contentDescription="@string/workout_checkmark"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/spinnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#394045"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/spinnerCheckMark_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintHorizontal_weight="9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
